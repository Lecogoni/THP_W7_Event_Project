<div class="container">
  <div>
    <p>
      <strong>Title : 
      <%= @event.title.upcase %>
      </strong>
    </p>

    <p>
      <strong>Start date :</strong>
      <%= @event.start_date %>
    </p>

    <p>
      <strong>Duration:</strong>
      <%= @event.duration %>
    </p>

    

    <p>
      <strong>Description:</strong>
      <%= @event.description %>
    </p>

    <p>
      <strong>Price:</strong>
      <%= @event.price %>
    </p>

    <p>
      <strong>Location:</strong>
      <%= @event.location %>
