    </thead>

    <tbody>
      <% @participants.each do |participant| %>
        <tr>
          <td><%= participant.user.first_name %></td>
          <td><%= participant.user.last_name %></td>
          <td><%= participant.user.email %></td>
          <%
=begin%>
 <td></td>
          <td><%= link_to 'Show', event %></td>
