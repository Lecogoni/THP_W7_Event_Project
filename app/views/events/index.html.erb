<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Events</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Start date</th>
        <th>Duration</th>
        <th>Description</th>
        <th>Price</th>
        <th>Location</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.title %></td>
          <td><%= event.start_date %></td>
          <td><%= event.duration %></td>
          
          <td><%= event.description %></td>
          <td><%= event.price %></td>
          <td><%= event.location %></td>
          <td><%= link_to 'Show', event %></td>
          <td><%= link_to 'Edit', edit_event_path(event) %></td>
          <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <button type="button" class="btn btn-light"><%= link_to 'New Event', new_event_path %></button>
</div>